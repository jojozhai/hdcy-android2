<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.hdcy.base.MerchantWebView
                    android:id="@+id/mywebview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></com.hdcy.base.MerchantWebView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center|left"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="22dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#303030"
                        android:textSize="15sp"
                        android:text="评论"/>
                    <TextView
                        android:id="@+id/tv_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#303030"
                        android:textSize="15sp"
                        android:text="1234"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/main_line" />
                <com.hdcy.app.view.NoScrollListView
                    android:id="@+id/lv_article_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:divider="@null"
                    android:paddingLeft="-12dp"
                    android:paddingRight="-12dp" />
                <Button
                    android:id="@+id/tv_show_more"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:background="@drawable/button_show_more"
                    android:textColor="#303030"
                    android:text="查看更多"/>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_article_fl_bt"
        android:layout_height="70dp"
        android:layout_width="70dp"
        android:src="@drawable/float_button"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="30dp"
        android:layout_gravity="bottom"
        />
    <FrameLayout
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"/>
    </FrameLayout>
</FrameLayout>

